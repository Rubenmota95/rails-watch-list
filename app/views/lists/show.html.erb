<div class="d-flex justify-content-between">
  <h1>My List</h1>
</div>
<%= render @list %>

<br>

<h3>Bookmarks:</h3>
<% if @list.bookmarks.empty? %>
  <p>This list is currently empty ğŸ˜¢</p>
<% else %>
  <% @list.bookmarks.each do |bookmark| %>
  <h5><%= bookmark.movie.title %></h5>
  <p><%= bookmark.comment %> <%= link_to 'Remove review', bookmark_path(bookmark), data: { turbo_method: 'DELETE', turbo_confirm: 'Are you sure?' }, class: "btn btn-danger" %></p>
  <% end %>
<% end %>


<%= link_to "Back to Lists", lists_path, class: "btn btn-success" %>
<%= link_to "Add a Movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
